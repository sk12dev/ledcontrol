{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["ES2022"],
    "moduleResolution": "node",
    "rootDir": "../",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "types": ["node"],
    "baseUrl": "../",
    "paths": {
      "*": ["node_modules/*", "../node_modules/*"]
    }
  },
  "include": ["src/**/*", "../src/generated/**/*"],
  "exclude": ["node_modules", "dist", "../node_modules", "../dist"]
}

